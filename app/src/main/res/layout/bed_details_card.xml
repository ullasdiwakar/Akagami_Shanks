<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <!-- CardView for displaying Bed availability details. -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bedDetailsCard"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:elevation="@dimen/card_elevation_resting">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/bedDetailsCardImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="@dimen/bed_details_card_image_padding"
                android:contentDescription="@string/bed_card_image_desc"/>
            <TextView
                android:id="@+id/bedDetailsCardCostText"
                android:layout_below="@id/bedDetailsCardImage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/bed_details_card_text_padding"
                android:paddingRight="@dimen/bed_details_card_text_padding"
                android:paddingTop="@dimen/bed_details_card_text_padding"
                android:paddingBottom="@dimen/bed_details_card_text_padding"
                android:layout_marginLeft="@dimen/bed_details_card_text_margin"
                android:layout_marginStart="@dimen/bed_details_card_text_margin"
                android:textSize="@dimen/bed_details_card_text_size"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/bedDetailsCardAvailabilityText"
                android:layout_below="@id/bedDetailsCardImage"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/bed_details_card_text_padding"
                android:paddingLeft="@dimen/bed_details_card_text_padding"
                android:paddingRight="@dimen/bed_details_card_text_padding"
                android:paddingBottom="@dimen/bed_details_card_text_padding"
                android:layout_marginRight="@dimen/bed_details_card_text_margin"
                android:layout_marginEnd="@dimen/bed_details_card_text_margin"
                android:textSize="@dimen/bed_details_card_text_size"
                android:textAlignment="center"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>